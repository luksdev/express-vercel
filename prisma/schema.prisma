generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Categories {
  id   Int    @id @default(autoincrement())
  name String

  @@map("categories")
}

model Instructors {
  id            Int    @id @default(autoincrement())
  name          String
  description   String
  image_profile String

  @@map("instructors")
}

model Courses {
  id            Int    @id @default(autoincrement())
  title         String
  cover_image   String
  description   String
  id_category   Int
  id_instructor Int
  subject       String

  @@map("courses")
}

model Modules {
  id        Int    @id @default(autoincrement())
  name      String
  id_course Int

  @@map("modules")
}

model Classes {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  url_video   String
  id_module   Int
  duration    Float

  @@map("classes")
}

model Library {
  id       Int    @id @default(autoincrement())
  url      String
  id_class Int

  @@map("library")
}

model Comments {
  id         Int     @id @default(autoincrement())
  comment    String
  date       String?
  id_comment Int?
  id_class   Int
  id_user    Int
  usersId    Int?

  @@index([usersId], map: "comments_usersId_fkey")
  @@map("comments")
}

model ImagesCourses {
  id        Int      @id @default(autoincrement())
  name      String
  key       String
  url_image String
  id_course Int
  createdAt DateTime @default(now())
  size      Int

  @@map("images_courses")
}

model ImagesInstructors {
  id            Int      @id @default(autoincrement())
  name          String
  key           String
  size          Int
  url_image     String
  id_instructor Int
  createdAt     DateTime @default(now())

  @@map("images_instructors")
}

model Users {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  email      String   @unique
  name       String
  identifier String   @unique
  password   String
  role       Int      @default(0)
  job        String?

  @@map("users")
}
